# Grimoires Environment Configuration
# Copy this file to .env and fill in your API keys
# cp .env.example .env

#===============================================================================
# Required API Keys
#===============================================================================

# OpenAI API Key (for Codex Familiar)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google AI API Key (for Gemini Familiar)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

#===============================================================================
# Optional API Keys
#===============================================================================

# Figma Access Token (for Stitch Familiar's Figma integration)
# Get from: https://www.figma.com/developers/api#access-tokens
FIGMA_ACCESS_TOKEN=

#===============================================================================
# Cost Management (Optional)
#===============================================================================

# Daily budget limit in USD
GRIMOIRES_DAILY_BUDGET=10.00

# Enable cost alerts (true/false)
GRIMOIRES_ENABLE_COST_ALERTS=true

# Cost saving mode threshold (percentage)
GRIMOIRES_COST_SAVING_THRESHOLD=80

#===============================================================================
# Performance Settings (Optional)
#===============================================================================

# Maximum parallel Familiar instances
GRIMOIRES_MAX_PARALLEL=4

# Cache TTL in seconds
GRIMOIRES_CACHE_TTL=3600

# Enable debug logging (true/false)
GRIMOIRES_DEBUG=false
