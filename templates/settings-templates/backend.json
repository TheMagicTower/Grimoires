{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Grimoires Backend Settings Template",
  "version": "0.3.0",

  "permissions": {
    "allow": [
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(psql *)",
      "Bash(mysql *)",
      "Bash(redis-cli *)",
      "Bash(mongosh *)",
      "Bash(prisma *)",
      "Bash(npx prisma *)",
      "Bash(drizzle-kit *)",
      "Bash(npx drizzle-kit *)",
      "Bash(npx typeorm *)",
      "Bash(curl localhost*)",
      "Bash(curl 127.0.0.1*)",
      "Bash(curl http://localhost*)",
      "Bash(curl http://127.0.0.1*)"
    ]
  },

  "context": {
    "includePatterns": [
      "src/api/**/*",
      "src/routes/**/*",
      "src/controllers/**/*",
      "src/services/**/*",
      "src/models/**/*",
      "src/repositories/**/*",
      "src/middleware/**/*",
      "src/utils/**/*",
      "src/config/**/*",
      "prisma/**/*",
      "drizzle/**/*",
      "migrations/**/*"
    ],
    "priority": [
      "src/api/**/*.ts",
      "src/routes/**/*.ts",
      "src/services/**/*.ts"
    ]
  },

  "familiars": {
    "recommended": ["codex", "gemini", "reviewer"],
    "gemini": {
      "enabled": true,
      "config": {
        "focus": ["security", "performance"],
        "depth": "high"
      }
    }
  },

  "rules": {
    "recommended": ["solid", "security", "api-design", "error-handling"]
  }
}
