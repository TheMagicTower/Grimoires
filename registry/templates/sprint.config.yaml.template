# sprint.config.yaml — {PROJECT_NAME}
# Sprint skills read this file to configure all project-specific behavior.
# Generated by /sprint:init

project:
  name: "{PROJECT_NAME}"
  repo_root: {REPO_ROOT}                # git root (auto-detected)
  worktree_base: {WORKTREE_BASE}        # worktree creation path
  main_branch: main
  memory_file: {MEMORY_FILE}            # relative to repo_root

docs:
  sprint_plan: docs/SPRINT-PLAN.md      # sprint plan document
  # squads: docs/SQUADS.md              # squad definitions (optional)

squads:
  # Example squad — adjust to your project structure
  - name: Backend
    prefix: backend
    scope:
      - src/api/
      - src/services/
    language: python
    conventions:
      formatter: "ruff format"
      linter: "ruff check"
      test: "pytest"

  # - name: Frontend
  #   prefix: frontend
  #   scope:
