  #     - apps/
  #   language: typescript
  #   conventions:
  #     formatter: "pnpm prettier --write"
  #     linter: "pnpm eslint"
  #     test: "pnpm vitest"

  # - name: Infra
  #   prefix: infra
  #   scope:
  #     - infra/
  #     - deploy/
  #   language: python
  #   conventions:
  #     formatter: "ruff format"
  #     linter: "ruff check"
  #     test: "pytest"

merge:
  strategy: squash                      # squash | merge | rebase
  delete_branch: true

ci:
  review_bots: []
  # Example review bot configuration:
  # - name: Seer
  #   check_pattern: "Seer|Sentry"
  #   comment_pattern: "seer|sentry"

review:
  checklist:
    - completion_criteria
    - coding_conventions
    - scope_boundary
    - edge_cases
  custom_checks: []
  # Example custom checks:
  # - legal_compliance
  # - security_review
  # - performance

agents:
  squad_model: sonnet                   # squad agent model
  lead_model: opus                      # lead agent model (reference)
  max_squad_agents: 4
  max_total_agents: 5
